<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="4dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"




        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/postProImgId"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/postusernameid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColorHighlight="@color/colorPrimaryDark"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    >
                    <TextView
                        android:id="@+id/text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="has been updated a post"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"
                        android:textSize="10dp"

                        />
                    <TextView
                        android:id="@+id/post_date_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@android:color/black"

                        android:textSize="10dp"

                        />
                    <TextView
                        android:id="@+id/post_time_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="@android:color/black"

                        android:textSize="10dp"

                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/postImageId"
                android:layout_width="110dp"
                android:layout_height="135dp"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"




                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"

                >
                <TextView
                    android:id="@+id/booktitleid"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Book Title"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColorHighlight="@color/colorPrimary"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"

                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/list"
                        />
                    <TextView
                        android:id="@+id/categoryid"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Category"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"

                        android:textAlignment="textStart"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"

                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/pen"

                        />
                    <TextView
                        android:id="@+id/autherid"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Auther"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="7dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"

                        android:textAlignment="textStart"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="155dp"
                        android:layout_height="63dp"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="22dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp"

                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:background="@drawable/share"
                                />

                            <TextView
                                android:id="@+id/landingtypeid"
                                android:layout_width="123dp"
                                android:layout_height="22dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="1dp"
                                android:text="landing type"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/black"

                                android:textColorHighlight="@color/colorPrimaryDark"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="22dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp"

                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:background="@drawable/study"
                                />
                            <TextView
                                android:id="@+id/Noofcopiesid"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:text="No of copies"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="7dp"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"

                                android:textAlignment="textStart"
                                android:textColorHighlight="@color/colorPrimaryDark"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="2dp"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/tag"
                            android:layout_marginTop="1dp"
                            android:backgroundTint="@color/colorPrimaryDark"

                            />
                        <TextView
                            android:id="@+id/price_id"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text=" Price"
                            android:layout_marginLeft="4dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"

                            />

                    </LinearLayout>







                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>