<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="4dp"


        />

    <EditText

        android:id="@+id/setup_username_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:drawableLeft="@drawable/username"
        android:padding="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:background="@drawable/inputs"
        android:hint="UserName"
        android:textColor="#0C0B0B"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/setup_fullname_id"
        android:drawableLeft="@drawable/name"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/inputs"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="335dp"
        android:ems="10"
        android:gravity="start|top"
        android:textColor="#0E0C0C"
        android:hint="FullName"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/setup_occupation_id"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0E0C0C"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"
        android:background="@drawable/inputs"

        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:drawableLeft="@drawable/country"

        android:ems="10"
        android:hint="Occupation"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/setup_infobutton_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="100dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"


        android:text="Save" />


</RelativeLayout>